<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.fahrep58.calculator2.Buttons">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_vertical"
            android:background="#14FFDA"
            android:layout_alignParentStart="true">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:id="@+id/button"
                    android:background="#D901E8"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:id="@+id/button2"
                    android:background="#D901E8"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/button3"
                    android:background="#0788FF"
                    android:layout_margin="3px"
                    android:layout_column="3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:id="@+id/button4"
                    android:background="#0788FF"
                    android:layout_margin="3px"
                    android:layout_column="4" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/button5"
                    android:background="#FF953A"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/button6"
                    android:background="#FF953A"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/button7"
                    android:background="#FF953A"
                    android:layout_margin="3px"
                    android:layout_column="3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:id="@+id/button8"
                    android:background="#0788FF"
                    android:layout_margin="3px"
                    android:layout_column="4" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/button9"
                    android:background="#FF953A"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/button10"
                    android:background="#FF953A"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/button11"
                    android:background="#FF953A"
                    android:layout_margin="3px"
                    android:layout_column="3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="i"
                    android:textAllCaps="false"
                    android:id="@+id/button12"
                    android:background="#0788FF"
                    android:layout_margin="3px"
                    android:layout_column="4" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/button13"
                    android:background="#FF953A"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/button14"
                    android:background="#FF953A"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/button15"
                    android:background="#FF953A"
                    android:layout_margin="3px"
                    android:layout_column="3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/button16"
                    android:background="#0788FF"
                    android:layout_margin="3px"
                    android:layout_column="4" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:id="@+id/button17"
                    android:background="#D901E8"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/button18"
                    android:background="#FF953A"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Backspace"
                    android:id="@+id/button20"
                    android:background="#CAE823"
                    android:layout_margin="3px"
                    android:layout_column="3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:id="@+id/button19"
                    android:layout_column="4"
                    android:background="#0788FF"
                    android:layout_margin="3px" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:id="@+id/button21"
                    android:layout_column="0"
                    android:background="#CAE823"
                    android:layout_margin="3px" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solve"
                    android:id="@+id/button22"
                    android:background="#CAE823"
                    android:layout_margin="3px"
                    android:layout_column="1"
                    android:layout_span="4" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>
        </TableLayout>
    </RelativeLayout>

</FrameLayout>
